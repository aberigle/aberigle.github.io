TRANSPARENT_BLACK = rgba(0,0,0,0.4)

body
  overflow hidden

  &.lastfm
    .background-container
      transition all TRANSITION
      vendor('filter', blur(.5em))

  &:not(.lastfm)
    #lastfm
      display none

  &.clean
    &.lastfm
      .background-container
        vendor('filter', blur(1em))
      #lastfm
        div
          opacity 1
          margin-top 0
          box-shadow 0 0 2em black

    #overlay
      background-color rgba(0,0,0,0)

    #main
      .info
        margin-top -2em
        opacity 0

    footer
      background-color TRANSPARENT_BLACK

#lastfm
  position absolute
  width 100%
  margin-top 10%
  div
    transition all (TRANSITION/3) ease-in-out
    opacity 0
    margin-top 2em
    width 300px
    p
      color white
      background rgba(0,0,0,0.5)
      text-align center
      padding 1em
      font-size xx-large


#main
  position absolute
  margin-top 15%
  z-index 1

  .info
    transition all (TRANSITION/3) ease-in-out

    .avatar
      width 200px

    .social
      text-align center
      color white
      font-size xx-large

      a
        transition background (TRANSITION/3)
        color white
        padding .5em 1em

        &:hover
          &.twitter
            background #4099ff // twitter blue
          &.github
            background black
          &.google-plus
            background #db4b39 // gplus red
          &.linkedin
            background #0077B5
          &.envelope-alt
            background gray

      .show-phone
        font-size x-large

.full-size
  width 100%
  height 100%
  position absolute

#overlay
  background-color TRANSPARENT_BLACK
  transition all TRANSITION
  position absolute
  z-index 1

#copyright
  img
    height 1em

footer
  z-index 1
  transition all TRANSITION
  position absolute
  bottom 0
  color white
  a
    color white !important

  .uhurus a
    color #00a362 !important
